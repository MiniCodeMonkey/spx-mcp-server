{
  "name": "codemonkey/spx-mcp-server",
  "description": "An MCP server for the PHP SPX profiler",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Codemonkey\\SpxMcpServer\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Mathias Hansen",
      "email": "me@codemonkey.io"
    }
  ],
  "require": {
    "php": "^8.1",
    "laravel/mcp": "^0.2.0"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Codemonkey\\SpxMcpServer\\SpxMcpServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
