{
  "name": "codemonkey/spx-mcp-server",
  "description": "An MCP server for the PHP SPX profiler",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Codemonkey\\SPXMcpServer\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Mathias Hansen",
      "email": "me@codemonkey.io"
    }
  ],
  "require": {
    "php": "^8.1",
    "laravel/mcp": "^0.2.0",
    "ext-zlib": "*"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Codemonkey\\SPXMcpServer\\SPXMcpServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "pestphp/pest": "^4.1"
  }
}
